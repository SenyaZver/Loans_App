<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.loansapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LoansApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoansApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".presentation.balanceOperationsScreen.BalanceOperationsActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.addLoanScreen.AddLoanActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.payLoanScreen.PayLoanActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.loanDetailsScreen.LoanDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.personalCabinetScreen.PersonalCabinetActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.authScreen.AuthActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>